const micBtn = document.getElementById("mic-btn");
const micImg = document.getElementById("mic-img");
const inputField = document.getElementById("input-field");

micBtn.addEventListener("click", toggleMic);

function toggleMic() {
  if (micImg.getAttribute("src") === "images/mic-off.png") {
    micImg.setAttribute("src", "images/mic-on.png");
    inputField.disabled = true;
    startListening();
  } else {
    micImg.setAttribute("src", "images/mic-off.png");
    inputField.disabled = false;
    stopListening();
  }
}

function startListening() {
  console.log("Starting microphone input...");
  // code to start microphone input goes here
}

function stopListening() {
  console.log("Stopping microphone input...");
  // code to stop microphone input goes here
}
